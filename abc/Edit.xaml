<Window x:Class="abc.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:abc"
        mc:Ignorable="d"
        Title="Edit" Height="450" Width="500">
    <Grid>
        <StackPanel Margin="20">
            <Label Name="name" Content="Сообщение"/>
            <TextBox Margin="0 0 0 10" x:Name="message" TextChanged="message_TextChanged"/>
            <Button x:Name="btnSave" Content="Сохранить" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
